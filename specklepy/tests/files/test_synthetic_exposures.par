[TARGET]
band = 'H'
star_table = data/test/example_star_table_centered.dat
sky_background = 14.4

[TELESCOPE]
diameter = 8.2*u.m
central_obscuration = 0.14
name = VLT Unit Telescope
psf_source = ../../simulations/noao_psf_10s.fits

[DETECTOR]
shape = (1024, 1024)
pixel_scale = 0.0106*u.arcsec
readout_noise = 35*u.electron
system_gain = 17*u.electron/u.adu
optics_transmission = 0.9
quantum_efficiency = 0.9*u.electron/u.ph
saturation_level = 7200*u.electron

[KWARGS]
DIT = 0.2*u.s
nframes = 10
nframes_limit = 100
outfile = data/test/synthetic/exposures.fits
