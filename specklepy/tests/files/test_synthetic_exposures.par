[TARGET]
band = 'H'
star_table = specklepy/tests/files/example_star_table_centered.dat
sky_background = 14.4

[TELESCOPE]
diameter = 8.2 m
central_obscuration = 0.14
name = VLT Unit Telescope
psf_source = ../../simulations/noao_psf_10s.fits

[DETECTOR]
shape = (1024, 1024)
pixel_scale = 0.0106 arcsec
readout_noise = 35 electron
system_gain = 17 electron/ adu
optics_transmission = 0.9
quantum_efficiency = 0.9 electron/ ph
saturation_level = 7200 electron

[KWARGS]
exposure_time = 0.2 s
n_frames = 10
n_frames_limit = 100
outfile = specklepy/tests/files/synthetic/exposures.fits
